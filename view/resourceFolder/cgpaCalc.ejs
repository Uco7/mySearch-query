        </div>

        <!-- Simple GPA Calculator -->
        <div id="gpaCalculator" class="mt-4">
            <h4 class="text-success">ðŸ“Œ Simple GPA Calculator</h4>
            <p>Enter your total grade points and credit units to calculate your GPA.</p>
            <label>Total Grade Points:</label>
            <input type="number" id="totalPoints" class="form-control" placeholder="Enter total grade points">
            <label class="mt-2">Total Credit Units:</label>
            <input type="number" id="totalUnits" class="form-control" placeholder="Enter total credit units">
            <button class="btn btn-primary mt-3" onclick="calculateGPA()">Calculate GPA</button>
            <h5 class="mt-3">Your GPA: <span id="gpaResult"></span></h5>
        </div>
    </div>

    <!-- Scroll to Top Button -->
    <button class="scroll-top" onclick="scrollToTop()">â†‘ Top</button>

    <script>
        function navigateToSection() {
            let section = document.getElementById("calcSection").value;
            if (section) {
                document.getElementById(section).scrollIntoView({ behavior: "smooth" });
            }
        }

        function calculateGPA() {
            let points = parseFloat(document.getElementById("totalPoints").value);
            let units = parseFloat(document.getElementById("totalUnits").value);
            if (units > 0) {
                document.getElementById("gpaResult").innerText = (points / units).toFixed(2);
            }
        }

        function scrollToTop() {
            window.scrollTo({ top: 0, behavior: "smooth" });
        }
    </script>
